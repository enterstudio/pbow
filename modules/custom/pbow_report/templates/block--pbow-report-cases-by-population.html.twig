<canvas id="chart-case-by-population" width="400" height="{{ data.height }}" style="display: block; width: 400; height: 122px;"></canvas>

<script>
  var data = {
    labels: [{{ ('"' ~ data.label|join('", "') ~ '"')|raw }}],
    datasets: [
      {
        label: "Cases",
        fill: false,
        lineTension: 0.1,
        backgroundColor: "rgba(250,180,12,0.5)",
        borderColor: "rgba(250,180,12,1)",
        data: [{{ data.cases|join(',') }}],
        spanGaps: false,
        borderWidth: 1
      },
      {
        label: "Users",
        fill: false,
        lineTension: 0.1,
        backgroundColor: "rgba(75,192,192,0.5)",
        borderColor: "rgba(75,192,192,1)",
        data: [{{ data.users|join(',') }}],
        spanGaps: false,
        borderWidth: 1
      }
    ]
  };

  new Chart("chart-case-by-population", {
    type: 'horizontalBar',
    data: data,
    options: {
      responsive: true,
      legend:{
        display: false
      },
    }
});

</script>
